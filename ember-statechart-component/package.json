{
  "name": "ember-statechart-component",
  "version": "6.1.2",
  "keywords": [
    "ember-addon"
  ],
  "description": "Use XState Machines *as* Components",
  "repository": "https://github.com/NullVoxPopuli/ember-statechart-component",
  "license": "MIT",
  "author": "NullVoxPopuli",
  "exports": {
    ".": {
      "types": "./ahhhh.d.ts",
      "default": "./dist/index.js"
    },
    "./addon-main.js": "./addon-main.cjs"
  },
  "files": [
    "addon-main.cjs",
    "dist",
    "declarations",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "start": "concurrently \"npm:watch:*\"",
    "build": "concurrently \"npm:build:*\"",
    "build:js": "rollup -c ./rollup.config.mjs",
    "build:docs": "cp ../README.md ./README.md",
    "watch:js": "rollup -c --watch --no-watch.clearScreen",
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\"",
    "lint:package": "publint",
    "lint:published-types": "attw --pack",
    "lint:fix": "concurrently \"npm:lint:*:fix\" --names \"fix:\" && pnpm format:prettier",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "format:prettier": "prettier . --write",
    "lint:prettier": "prettier . --check",
    "prepare": "pnpm build",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.9",
    "@glint/template": ">= 1.0.0"
  },
  "peerDependencies": {
    "xstate": "^5.18.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@babel/core": "7.25.7",
    "@babel/eslint-parser": "^7.25.7",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-syntax-decorators": "7.25.7",
    "@babel/plugin-transform-typescript": "^7.25.7",
    "@babel/preset-typescript": "7.25.7",
    "@embroider/addon-dev": "^5.0.0",
    "@glimmer/compiler": "^0.92.4",
    "@glimmer/component": "^1.0.4",
    "@glimmer/env": "^0.1.7",
    "@glint/core": "1.4.1-unstable.b29a807",
    "@glint/environment-ember-loose": "1.4.1-unstable.b29a807",
    "@glint/environment-ember-template-imports": "1.4.1-unstable.b29a807",
    "@glint/template": "1.4.1-unstable.b29a807",
    "@nullvoxpopuli/eslint-configs": "^4.2.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@tsconfig/ember": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "concurrently": "^9.0.1",
    "decorator-transforms": "^2.2.2",
    "ember-source": "^5.5.0",
    "ember-template-lint": "6.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-decorator-position": "^5.0.2",
    "eslint-plugin-ember": "^12.2.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "^3.3.3",
    "publint": "^0.2.11",
    "rollup": "4.24.0",
    "rollup-plugin-ts": "^3.0.2",
    "typescript": "~5.5.0",
    "xstate": "^5.18.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {}
  },
  "volta": {
    "extends": "../package.json"
  }
}
